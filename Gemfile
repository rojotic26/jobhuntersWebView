# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'sinatra-contrib'
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'jobhunters'
gem 'json'
gem 'nokogiri'

group :development do
gem 'sqlite3'
gem 'tux'
end

group :production do
gem 'pg'
end

group :test do
	gem 'minitest'
	gem 'rack'
	gem 'rack-test'
	gem 'rake'
end
